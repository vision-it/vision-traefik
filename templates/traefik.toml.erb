# This file is managed by Puppet; Do not edit
# traefik.toml - Traefik configuration file
# https://docs.traefik.io/configuration/commons/

checkNewVersion = false
defaultEntryPoints = ["http", "https"]
logLevel = "<%= @log_level -%>"

<% if @access_log -%>
[accessLog]
  filePath = "/etc/traefik/logs/access.log"
  bufferingSize = 100
  [accessLog.fields.headers]
    defaultMode = "keep"
    [accessLog.fields.headers.names]
      "ClientAddr" = "redact"
<% end -%>

[docker]
exposedByDefault = false
swarmMode = true

[entryPoints]
  [entryPoints.http]
  address = ":80"
    [entryPoints.http.redirect]
    entryPoint = "https"
  [entryPoints.https]
  address = ":443"
    [entryPoints.https.tls]
<%- if @x509_certificate and @x509_key -%>
      [[entryPoints.https.tls.certificates]]
      certFile = "/etc/traefik/cert.pem"
      keyFile = "/etc/traefik/key.pem"
<% end -%>
    [entryPoints.https.redirect]
    regex = "^https://vision.fraunhofer.de/$"
    replacement = "https://www.vision.fraunhofer.de/$1"
  [entryPoint.traefik]
  address = ":8080"

[api]
entryPoint = "traefik"
