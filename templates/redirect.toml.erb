# Configuration for central http-to-https redirect
# https://docs.traefik.io/migration/v1-to-v2/#http-to-https-redirection-is-now-configured-on-routers

<%- if @x509_certificate and @x509_key -%>
[[tls.certificates]]
  certFile = "/etc/traefik/cert.pem"
  keyFile = "/etc/traefik/key.pem"
[tls.options]
  [tls.options.default]
    minVersion = "VersionTLS12"
[tls.stores]
  [tls.stores.default]
    [tls.stores.default.defaultCertificate]
      certFile = "/etc/traefik/cert.pem"
      keyFile = "/etc/traefik/key.pem"
<% end -%>

[http.routers]
  [http.routers.default-redirects]
    rule = "Host(`vision.fraunhofer.de`) && Path(`/`)"
    middlewares = ["www-redirect"]
    service = "noop"
    entryPoints = ["https", "http"]
    [http.routers.default-redirects.tls]

[http.middlewares]
  [http.middlewares.www-redirect.redirectregex]
    regex = "^https?://vision.fraunhofer.de"
    replacement = "https://www.vision.fraunhofer.de/"
    permanent = true

[http.services]
  # noop service, the URL will be never called
  # just for the catch-all https redirect
  [http.services.noop.LoadBalancer]
     [[http.services.noop.LoadBalancer.servers]]
        url = ""